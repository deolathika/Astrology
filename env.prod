# Production Environment Configuration
NODE_ENV=production
NEXT_PUBLIC_APP_ENV=production
NEXT_PUBLIC_APP_NAME=Daily Secrets
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_URL=https://daily-secrets-app.vercel.app

# API Configuration
NEXT_PUBLIC_API_URL=https://daily-secrets-api.vercel.app/api
NEXT_PUBLIC_API_TIMEOUT=15000

# Firebase Configuration (Production)
NEXT_PUBLIC_FIREBASE_API_KEY=your_prod_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-prod-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-prod-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-prod-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=987654321
NEXT_PUBLIC_FIREBASE_APP_ID=1:987654321:web:fedcba654321

# OpenAI Configuration (Production)
NEXT_PUBLIC_OPENAI_API_KEY=your_prod_openai_api_key
NEXT_PUBLIC_OPENAI_MODEL=gpt-4
NEXT_PUBLIC_OPENAI_MAX_TOKENS=2000

# Google Gemini Configuration (Production)
NEXT_PUBLIC_GEMINI_API_KEY=your_prod_gemini_api_key

# Stripe Configuration (Production)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_prod_stripe_key
STRIPE_SECRET_KEY=sk_live_your_prod_stripe_secret

# Analytics (Production)
NEXT_PUBLIC_GA_TRACKING_ID=G-YYYYYYYYYY
NEXT_PUBLIC_ANALYTICS_ENABLED=true

# Feature Flags (Production)
NEXT_PUBLIC_FEATURE_AI_CONTENT=true
NEXT_PUBLIC_FEATURE_NOTIFICATIONS=true
NEXT_PUBLIC_FEATURE_PAYMENTS=true
NEXT_PUBLIC_FEATURE_SOCIAL_SHARING=true
NEXT_PUBLIC_FEATURE_OFFLINE_MODE=true

# Debug Configuration
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_LOG_LEVEL=error
NEXT_PUBLIC_HOT_RELOAD=false
